@model Entity.Item

@{
    ViewData["Title"] = "CreateItem";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title" style="display: flex; justify-content: center;">Yeni Bileşen Oluşturma</h4>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div class="card">
                        <!-- card yerine item class'ını kullandık -->
                        <div class="card-header bg-primary text-white text-center">
                            <div class="card-title">Bileşen Bilgileri</div>
                        </div>
                        <div class="card-body">
                            <!-- item-body yerine card-body kullanıldı -->

                            <div class="form-group">
                                <label for="itemname" style="display: block; text-align: center;">Yeni Bileşen İsmini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ItemName" id="itemname">
                            </div>

                            <div class="form-group">
                                <label for="itemQuantity" style="display: block; text-align: center;">Yeni Bileşen Stoğunuzu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Quantity" id="itemQuantity">
                            </div>
                        </div>
                        <div class="card-footer" style="display: flex; justify-content: center;">
                            <!-- item-action yerine card-footer kullanıldı -->
                            <button class="btn btn-success">Oluştur</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
