@model Entity.User

@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title" style="text-align: center; font-size: 28px;">Kullanıcı Güncelleme</h4>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white text-center">
                            <div class="card-title" style="font-size: 20px;">Kullanıcı Bilgileri</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="UserId" />

                            <div class="form-group">
                                <label for="userName" style="font-size: 16px;">Kullanıcı Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="UserName" id="userId" style="font-size: 16px;">
                            </div>

                            <div class="form-group">
                                <label for="password" style="font-size: 16px;">Şifre Giriniz</label>
                                <input type="password" class="form-control" asp-for="Password" id="password" style="font-size: 16px;">
                            </div>

                            <div class="form-group">
                                <label for="rol" style="font-size: 16px;">Rol Giriniz</label>
                                <input type="text" class="form-control" asp-for="Rol" id="rol" style="font-size: 16px;">
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <button class="btn btn-primary btn-lg" style="font-size: 16px;">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
