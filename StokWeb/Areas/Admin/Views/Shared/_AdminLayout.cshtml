                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="/Home/Index">Oturumu Kapat</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <div class="sb-sidenav-menu-heading">Menü</div>


                        <a class="nav-link" href="~/Admin">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-file"></i></div>
                            Ana Sayfa

                        </a>

                        <a class="nav-link" href="/Admin/Card/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Kart Yönetimi
                        </a>

                        <a class="nav-link" href="/Admin/Item/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Bileşen Yönetimi
                        </a>
                        <a class="nav-link" href="/Admin/CardItemControllers/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Karta Bileşen ekleme
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link" href="/Admin/User/Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                Kullanıcı Yönetimi
                            </a>
                        }
                        @* <a style="color:yellow;" class="nav-link" href="/">
                        <div class="sb-nav-link-icon">
                        <i class="fa-solid fa-scroll fa-flip" style="--fa-animation-duration: 3s; color:yellow;"></i>
                        </div>
                        Siteye Git
                        </a> *@

                        <hr />

                        @*   <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                        <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                        Giriş Yönetimi
                        <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                        <nav class="sb-sidenav-menu-nested nav">
                        <a class="nav-link" href="/Admin/Roles">Rol Yönetimi</a>
                        <a class="nav-link" href="/Admin/Users">Kullanıcı Yönetimi</a>
                        </nav>
                        </div> *@

                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Giriş Yapan:</div>
                    @User.Identity.Name
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main role="main" class="pb-3">
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    @if (TempData["StokError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["StokError"]
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- CSS -->
    <style>
        .alert {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 9999;
            display: none; /* Başlangıçta gizle */
        }

            .alert.show {
                display: block;
            }
    </style>

    <!-- JavaScript -->
    <script>
        // Eğer TempData'dan hata mesajı varsa, alert göster.
        @if (TempData["StokError"] != null)
        {
            <text>
                setTimeout(function () {
                    $(".alert").addClass("show");
                    setTimeout(function () {
                        $(".alert").removeClass("show");
                    }, 3000); // 3 saniye sonra kaybolacak
                }, 500);
            </text>
        }
    </script>
</body>
</html>